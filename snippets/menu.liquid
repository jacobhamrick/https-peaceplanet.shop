<section class="main-menu">

  <div class="menu-button toggle-menu">

    <button class="hamburger hamburger--squeeze" type="button">
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
    </button>


  </div>

  <div class="menu flex">
    {% for link in linklists[section.settings.main_linklist].links %}


      {% if link.links == blank %}
      <div class="nav-item">
        <a class="nav-link" href="{{link.url}}" {% if link.current %}aria-current="page" id="highlight"{% endif %}><p>{{link.title}}</p></a>
      </div>
      {% endif %}

      {% if link.links != blank %}

      <div class="nav-item dropdown">

        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false" {% if link.current %}aria-current="page" id="highlight"{% endif %}>
          <p>Shop <i class="fas fa-caret-right dropdown-caret rotated"></i></p>
        </a>

        <div class="dropdown-nav dropped">

            {% for childlink in link.links %}

              <div class="dropdown-header"><p>{{childlink.title}}</p></div>

                  {% for sublink in childlink.links %}
                  <ul class="dropdown-link-list">
                    <li class="flex">
                      <a href="{{sublink.url}}" {% if sublink.current %}aria-current="page" id="highlight"{% endif %}><p>{{sublink.title}}</p></a>
                    </li>
                  {% endfor %}
                </ul>

            {% endfor %}

        </div>

      </div>

      {% endif %}
      {% endfor %}

      <div id="menu-peace"> <img id="peace-star" src="{{ 'logo_01wht.png' | asset_url }}" /></div>

  </div>

</section>
