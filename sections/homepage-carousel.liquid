<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselIndicators" data-slide-to="0" class="active"><i class="fas fa-star"></i></li>
    <li data-target="#carouselIndicators" data-slide-to="1" class=""><i class="fas fa-star"></i></li>
    <li data-target="#carouselIndicators" data-slide-to="2" class=""><i class="fas fa-star"></i></li>
    <li data-target="#carouselIndicators" data-slide-to="3" class=""><i class="fas fa-star"></i></li>

  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active" style="background-image: url({{ section.settings.slide-1 | img_url: '800x' }});">
      <img src="{{ section.settings.slide-1 | img_url: '800x' }}">
    </div>
    <div class="carousel-item" style="background-image: url({{ section.settings.slide-2 | img_url: '800x' }});">
      <img src="{{ section.settings.slide-2 | img_url: '800x' }}">
    </div>
    <div class="carousel-item" style="background-image: url({{ section.settings.slide-3 | img_url: '800x' }});">
      <img src="{{ section.settings.slide-3 | img_url: '800x' }}">
    </div>
    <div class="carousel-item" style="background-image: url({{ section.settings.slide-4 | img_url: '800x' }});">
      <img src="{{ section.settings.slide-4 | img_url: '800x' }}">
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
      <i class="carousel-control-next-icon fas fa-hand-point-left"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
      <i class="carousel-control-next-icon fas fa-hand-point-right"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Homepage Carousel",
    "settings": [
      {
        "type": "image_picker",
        "id": "slide-1",
        "label": "Slide 1"
      },
      {
        "type": "image_picker",
        "id": "slide-2",
        "label": "Slide 2"
      },
      {
        "type": "image_picker",
        "id": "slide-3",
        "label": "Slide 3"
      },
      {
        "type": "image_picker",
        "id": "slide-4",
        "label": "Slide 4"
      },
      {
        "type": "image_picker",
        "id": "slide-5",
        "label": "Slide 5"
      }
    ]
  }
{% endschema %}
